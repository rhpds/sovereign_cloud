---
apiVersion: policy.open-cluster-management.io/v1
kind: Policy
metadata:
  name: policy-gitops-operator
  namespace: {{ ocp4_workload_prepare_hcp_policy_namespace }}
spec:
  disabled: false
  remediationAction: enforce
  policy-templates:
    - objectDefinition:
        apiVersion: policy.open-cluster-management.io/v1beta1
        kind: OperatorPolicy
        metadata:
          name: install-gitops-operator
        spec:
          remediationAction: enforce
          severity: high
          complianceType: musthave
          subscription:
            name: {{ ocp4_workload_prepare_hcp_gitops_operator_name }}
            namespace: openshift-operators
            channel: {{ ocp4_workload_prepare_hcp_gitops_operator_channel }}
            source: {{ ocp4_workload_prepare_hcp_gitops_operator_source }}
            sourceNamespace: {{ ocp4_workload_prepare_hcp_gitops_operator_source_namespace }}
            installPlanApproval: {{ ocp4_workload_prepare_hcp_gitops_operator_approval }}
---
apiVersion: policy.open-cluster-management.io/v1
kind: PlacementBinding
metadata:
  name: binding-policy-gitops
  namespace: {{ ocp4_workload_prepare_hcp_policy_namespace }}
placementRef:
  apiGroup: cluster.open-cluster-management.io
  kind: Placement
  name: gitops-placement
subjects:
  - apiGroup: policy.open-cluster-management.io
    kind: Policy
    name: policy-gitops-operator
